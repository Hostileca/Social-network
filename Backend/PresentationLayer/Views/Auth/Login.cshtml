@model BusinessLogicLayer.ViewModels.LoginViewModel
<form asp-controller="Auth" asp-action="Login" method="POST">
    <input type="hidden" asp-for="ReturnUrl"/>
    <h3>Sign In</h3>
    @Html.ValidationSummary(true, "")
    <div>
        <input asp-for="Email" name="Email" placeholder="Email"/>
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <input id="passwordInput" asp-for="Password" name="Password" placeholder="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Sign In</button>
    <a href="@Url.Action("Register", "Auth", new { returnUrl = Model.ReturnUrl })">Dont have an account?</a>
</form>
